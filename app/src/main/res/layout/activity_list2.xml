<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E3EA"
    android:onClick="buttonBackToMainClick"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonBackAdd"
        android:layout_below="@+id/textViewColumnName"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:background="#E5E3EA"
        android:cacheColorHint="@color/purple_200">

    </ListView>

    <TextView
        android:id="@+id/textViewColumnName"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textViewPost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#2196F3"
        android:gravity="center_horizontal|center_vertical"
        android:text="ФИО"
        android:textColor="#020000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewColumnType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textViewPost"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/textViewColumnCost"
        android:layout_toEndOf="@+id/textViewColumnName"
        android:background="#2196F3"
        android:gravity="center_horizontal|center_vertical"
        android:text="Должность"
        android:textColor="#020000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewColumnCost"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="Зарплата"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonBackAdd"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:backgroundTint="#8BC34A"
        android:fontFamily="sans-serif-medium"
        android:onClick="buttonAddClick"
        android:text="Добавить сотрудника"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>